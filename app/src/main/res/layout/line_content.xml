<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal"
        android:id="@+id/pre"/>

    <LinearLayout
    android:orientation="horizontal" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/part1"
        android:layout_below="@id/pre">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/profilePicture"
        android:background="@color/colorPrimaryDark"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/studentName_textView"
        android:hint="@string/studen_name_string"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@android:drawable/arrow_down_float"
        android:layout_gravity="center"
        android:layout_marginLeft="160dp"
        android:id="@+id/imageButton_down"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/part2"
        android:layout_below="@id/part1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/some_text"
            android:layout_gravity="center"
            android:id="@+id/post_textView"
            android:paddingBottom="10dp"/>
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:id="@+id/bigImage"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/part3"
        android:layout_below="@id/part2">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:src="@drawable/like"
            android:id="@+id/imageButton_like"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/comment"
            android:layout_marginLeft="100dp"
            android:id="@+id/imageButton_commend"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/shareicon"
            android:layout_marginLeft="110dp"
            android:id="@+id/imageButton_share"/>
    </LinearLayout>

</RelativeLayout>
